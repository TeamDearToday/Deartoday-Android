<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="co.kr.deartoday.presentation.viewmodel.timemachine.TimeMachineViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.timemachine.TimeMachineChat4Fragment">

        <ScrollView
            android:id="@+id/sv_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/convo_bg_aos" />

        </ScrollView>

        <ScrollView
            android:id="@+id/sv_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/layout_answer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_year"
                    style="@style/H0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_year_yellow"
                    android:gravity="center"
                    android:paddingHorizontal="23dp"
                    android:paddingVertical="17dp"
                    android:text="@{viewmodel.year}"
                    android:textColor="@color/gray_696969"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="2016" />

                <TextView
                    android:id="@+id/tv_month"
                    style="@style/H0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-14dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_month_yellow"
                    android:gravity="center"
                    android:paddingHorizontal="23dp"
                    android:paddingVertical="17dp"
                    android:text="@{viewmodel.month}"
                    android:textColor="@color/gray_696969"
                    app:layout_constraintStart_toEndOf="@id/tv_year"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="07" />

                <TextView
                    android:id="@+id/tv_day"
                    style="@style/H0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-14dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_month_yellow"
                    android:gravity="center"
                    android:paddingHorizontal="23dp"
                    android:paddingVertical="17dp"
                    android:text="@{viewmodel.day}"
                    android:textColor="@color/gray_696969"
                    app:layout_constraintStart_toEndOf="@id/tv_month"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="22" />

                <ImageView
                    android:id="@+id/iv_exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_exit_yellow"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/rectangle_radius_20"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:visibility="invisible"
                    app:layout_constraintDimensionRatio="328:182"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_year"
                    tools:src="@drawable/main_left_withg_a_1" />

                <TextView
                    android:id="@+id/tv_content"
                    style="@style/P7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/rectangle_textfield_border_yellow_radius_4_20"
                    android:backgroundTint="@color/yellow_feffdb"
                    android:paddingHorizontal="27dp"
                    android:paddingVertical="13dp"
                    android:text="고마워!\n아하, 너는 이때로 가장 돌아가고 싶었구나."
                    android:textColor="@color/dark_gray_323232"
                    android:visibility="invisible"
                    app:layout_constraintTop_toBottomOf="@id/iv_image" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:paddingBottom="16dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent">

            <EditText
                android:id="@+id/et_answer"
                style="@style/P7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="8dp"
                android:background="@android:color/transparent"
                android:hint="답장을 입력해주세요"
                android:maxLines="2"
                android:text="@={viewmodel.answer}"
                android:textColor="@color/white_ffffff"
                android:textColorHint="@color/gray_01_a0a0a0"
                app:layout_constraintBottom_toBottomOf="@id/tv_send"
                app:layout_constraintEnd_toStartOf="@id/tv_send"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_send"
                style="@style/BtnKr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:clickable="@{viewmodel.answer.length() == 0 || viewmodel.isEditable == false ? false : true}"
                android:padding="4dp"
                android:text="보내기"
                android:textColor="@{viewmodel.answer.length() == 0 || viewmodel.isEditable == false ? @color/gray_01_a0a0a0 : @color/blue_558fff}"
                app:layout_constraintBottom_toBottomOf="@id/layout_underline_answer"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/layout_underline_answer"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue_558fff"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>