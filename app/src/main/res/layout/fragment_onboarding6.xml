<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.onboarding.Onboarding6Fragment">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image_3_withg" />

        <TextView
            android:id="@+id/tv_ob2_line1"
            style="@style/Onboard0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="117dp"
            android:gravity="center"
            android:text="@string/ob6_line1"
            android:textColor="@color/white_ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toEndOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_circle_touch_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="150dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/ic_btn_circle_touch"
            app:layout_constraintBottom_toTopOf="@+id/btn_box_touch_6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- centercrop 했을 때 세로 비율이 안 맞아요-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_box_touch_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_touch_area"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.301"
            app:layout_constraintHorizontal_bias="0.479"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.543"
            app:layout_constraintWidth_percent="0.663" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>